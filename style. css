/* Paleta de Colores: 
   - Primario (Azul): #007bff
   - Secundario (Amarillo/Dorado): #ffc107
   - Fondo General (Gris muy claro): #f8f9fa
   - Fondo Alterno (Beige suave): #fff3cd
   - Texto: #343a40
*/

/* 2. Unidades de medida y Tipografía */
/* Base de rem: 1rem = 16px */
html {
    font-size: 16px; 
    scroll-behavior: smooth;
}

body {
    font-family: 'Helvetica Neue', Arial, sans-serif;
    background-color: #f8f9fa; /* 3. Fondo General */
    color: #343a40;
    /* 6. Modelo de caja - Margen (reseteo) */
    margin: 0; 
    padding: 0;
}

h1 {
    font-size: 3.5rem; /* 2. Uso de rem */
}

h2 {
    font-size: 2em; /* 2. Uso de em */
    color: #007bff;
    border-bottom: 2px solid #ffc107; /* 6. Border */
    padding-bottom: 0.5em;
    font-weight: 700; /* 2. font-weight */
}

p, li {
    font-size: 1rem;
    line-height: 1.6;
}

/* 5. Selector ID / 6. Box Model (Padding, Border) */
#encabezado-principal {
    background-color: #007bff; /* Azul Primario */
    color: white;
    padding: 2rem 0; /* 6. Padding vertical y horizontal 0 */
    text-align: center;
    border-bottom: 8px solid #ffc107; 
}

/* 4. Menú de navegación estilizado */
nav {
    background-color: #343a40;
    padding: 0.5rem 0; 
    /* 7. Posicionamiento Fixed para que el menú siga al hacer scroll */
    position: sticky;
    top: 0;
    z-index: 1000;
}

.menu-navegacion {
    list-style: none;
    margin: 0;
    padding: 0;
    text-align: center;
}

.menu-navegacion li {
    display: inline-block;
    margin: 0 15px;
}

.enlace-nav {
    color: white;
    text-decoration: none;
    font-size: 1.1rem;
    padding: 10px 15px;
    display: inline-block;
    font-style: normal; /* 2. font-style */
}

/* 4. Pseudo-clases */
.enlace-nav:hover {
    background-color: #ffc107; /* Amarillo/Dorado Secundario */
    color: #343a40;
    border-radius: 4px;
}

.enlace-nav:active {
    background-color: #dc3545; /* Rojo de contraste */
}

.enlace-nav:visited {
    color: lightgray; /* Los enlaces visitados cambian sutilmente */
}

/* Estilos de Sección General */
main section {
    /* 6. Modelo de Caja - Margin y Padding */
    padding: 3rem 5%; /* 5% de margen a los lados */
    margin-bottom: 2rem;
    border-radius: 8px;
    background-color: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* 3. Fondo alterno para algunas secciones */
.fondo-alterno {
    background-color: #fff3cd; /* Beige suave */
}

/* 5. Selectores Class - Elementos Repetidos */
.elemento-repetido {
    font-style: italic; /* 2. font-style */
    font-weight: 500; /* 2. font-weight */
    color: #007bff;
    /* 6. Modelo de Caja - Border */
    border-left: 3px solid #ffc107;
    padding-left: 15px;
}

/* 8. Diseño de Columnas con Float */
.contenedor-columnas {
    /* 3. Background-image */
    background-image: url('https://upload.wikimedia.org/wikipedia/commons/thumb/e/ef/Flag_of_Puerto_Rico.svg/1200px-Flag_of_Puerto_Rico.svg.png');
    background-size: 10%;
    background-repeat: no-repeat;
    background-position: top right;
    padding: 1rem;
    overflow: auto; /* Para contener los floats */
}

.columna-info {
    float: left; /* 7. Flotamiento */
    width: 60%;
    /* 6. Margin */
    margin-right: 2%; 
    padding: 10px;
    box-sizing: border-box;
}

.columna-imagen {
    float: right; /* 7. Flotamiento */
    width: 38%;
    padding: 10px;
    box-sizing: border-box;
}

.limpiador {
    clear: both; /* 7. Clear */
}

/* Estilos para Figuras e Imágenes */
figure {
    /* 6. Padding */
    padding: 10px;
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    text-align: center;
}

img {
    /* 9. Diseño adaptable */
    max-width: 100%; 
    height: auto; 
    /* 6. Border */
    border: 3px solid white; 
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

figcaption {
    font-size: 0.9rem;
    color: #6c757d;
    margin-top: 5px;
}

/* 7. Posicionamiento Relative y Absolute */
.contenedor-relative {
    /* Establece un contexto para el elemento absolute */
    position: relative; 
    display: inline-block;
}

.etiqueta-absolute {
    /* Posicionado respecto al .contenedor-relative */
    position: absolute; 
    top: 10px;
    left: 10px;
    background-color: rgba(255, 0, 0, 0.8);
    color: white;
    padding: 5px 10px;
    font-size: 1.2rem;
    border-radius: 3px;
    font-weight: bold;
}

/* 7. Posicionamiento Fixed */
.alerta-clima {
    position: fixed; /* Fijo en la ventana */
    bottom: 20px;
    left: 20px;
    background-color: #ffc107;
    color: #343a40;
    padding: 15px;
    border: 2px solid darkorange;
    border-radius: 5px;
    z-index: 100;
}

/* Video Responsive */
.video-responsive {
    /* Hace que el iframe de YouTube se vea bien en cualquier dispositivo */
    overflow: hidden;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    position: relative;
    height: 0;
}

.video-responsive iframe {
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    position: absolute;
}

footer {
    background-color: #343a40;
    color: white;
    text-align: center;
    padding: 1rem;
    /* 6. Modelo de Caja - Margen */
    margin-top: 2rem; 
}

.enlace-footer {
    color: #ffc107;
    text-decoration: none;
}

.enlace-footer:hover {
    text-decoration: underline;
}

/* 9. Diseño Adaptable (Responsive) - Media Queries */
@media (max-width: 992px) {
    /* En tabletas, la tipografía base es más pequeña */
    html {
        font-size: 15px;
    }
}

@media (max-width: 768px) {
    /* En dispositivos móviles */
    
    /* 8. Las columnas se apilan (ancho completo) */
    .columna-info, .columna-imagen {
        width: 100%;
        float: none;
        margin-right: 0;
        margin-bottom: 20px;
    }

    h1 {
        font-size: 2.5rem;
    }

    nav {
        /* Ocultar el menú fijo para dar más espacio en móviles o simplificar */
        position: static; 
    }
}
